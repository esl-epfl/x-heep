name: "openhwgroup:cve2:cve2_multdiv:0.1"
description: "Multiplier and divider"

filesets:
  files_rtl:
    depend:
      - lowrisc:prim:assert
      - openhwgroup:cve2:cve2_pkg
    files:
      - rtl/cve2_multdiv_fast.sv
      - rtl/cve2_multdiv_slow.sv
    file_type: systemVerilogSource

parameters:
  RV32M:
    datatype: int
    default: 2
    paramtype: vlogparam
    description: "Selection of multiplication implementation. Switch to enable single cycle multiplications."

targets:
  default: &default_target
    filesets:
      - files_rtl
